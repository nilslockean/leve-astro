---
import type { HTMLAttributes } from "astro/types";

export const VideoName = {
  BrodTrim: "BrodTrim",
  Kanelbulle: "Kanelbulle",
  Munk4: "Munk4",
};

type VideoNameValue = keyof typeof VideoName;

const VIDEO_FILES: Record<VideoNameValue, string> = {
  BrodTrim: "Brod-trim-min.mp4",
  Kanelbulle: "Kanelbulle-min.mp4",
  Munk4: "Munk-4-min.mp4",
};

interface Props extends HTMLAttributes<"video"> {
  name: VideoNameValue;
}

const { name, ...rest } = Astro.props;
const src = `/videos/${VIDEO_FILES[name]}`;
---

<video {...rest}>
  <source src={src} type="video/mp4" />
</video>
